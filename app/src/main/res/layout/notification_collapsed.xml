<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:orientation="horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_alignParentTop="true"
        android:background="@color/light_brown">

        <ImageView
            android:id="@+id/notificationTheme"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_weight="5"
            android:src="@drawable/teatheme" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:text="Musik Tea Player"
            android:textSize="10dp"
            android:textStyle="italic"
            android:textColor="#291C06"
            android:layout_weight="25"

            />

        <ImageView
            android:id="@+id/notificationEnder"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/notificationcross"
            android:layout_weight="5"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/collapsedInfo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="4"
            >
            <TextView
                android:id="@+id/collapsedSongName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Name"
                android:layout_marginStart="5dp"
                android:textColor="#FFF"
                android:ellipsize="end"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/collapsedArtistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:layout_marginStart="5dp"
                android:textColor="#FFF"
                android:ellipsize="end"
                android:singleLine="true"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/collapsedButtons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="3"
            >
            <ImageView
                android:id="@+id/collapsedBackward"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/backward"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/collapsedPlay"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/playbutton"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/collapsedForward"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/forward"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>